{% trans_default_domain 'FOSUserBundle' %}

<div class="panel-heading">
    <h3 class="panel-title">Zaloguj się</h3>
</div>
<div class="panel-body">
    <form action="{{ path("fos_user_security_check") }}" method="post">
        <fieldset>
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
            <div class="form-group">
                <input class="form-control" placeholder="E-mail" name="_username" type="email" value="{{ last_username }}"  autofocus>
            </div>
            <div class="form-group">
                <input class="form-control" placeholder="Hasło" name="_password" type="password" value="">
            </div>
            {% if error %}
                <div class="form-group">
                    <p class="text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                </div>

            {% endif %}
            <div class="checkbox">
                <label>
                    <input name="remember_me" type="checkbox" value="on">Zapamiętaj mnie
                </label>
            </div>
            <!-- Change this to a button or input when using this as a form -->
            <input type="submit" class="btn btn-lg btn-success btn-block" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"/>
        </fieldset>
    </form>
</div>
