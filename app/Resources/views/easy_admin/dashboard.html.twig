{% extends '@EasyAdmin/default/layout.html.twig' %}
{% set _content_title = 'Admin dashboard' %}
{% block page_title -%}
    {{ _content_title }}
{%- endblock %}
{% block content_header %}
    {#<h1 class="title">{{ _content_title }}</h1>#}
{% endblock %}
{% block main %}
    <div class="row">
        <div class="col-md-4">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-4">
                            <i class="fa fa-blind fa-5x"></i>
                        </div>
                        <div class="col-xs-8 text">
                            <div class="row">
                                <div class="col-xs-6">
                                    <h4 class="huge" >Dzisiaj</h4>

                                </div>
                                <div class="col-xs-6">
                                    <h4>{{ todayFinacialStatement['amountSum'] }} zł</h4>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-xs-6">
                                    <h4 class="huge" >Miesiąc</h4>
                                </div>
                                <div class="col-xs-6">
                                    <h4>{{ monthlyFinacialStatement['amountSum'] }} zł</h4>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-4">
                            <i class="fa fa-paw fa-5x"></i>
                        </div>
                        <div class="col-xs-8 text">
                            <div class="row">
                                <div class="col-xs-6">
                                    <h4 class="huge" >Dzisiaj</h4>

                                </div>
                                <div class="col-xs-6">
                                    <h4>{{ todayFinacialStatement['grossIncomSum'] }} zł</h4>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-xs-6">
                                    <h4 class="huge" >Miesiąc</h4>
                                </div>
                                <div class="col-xs-6">
                                    <h4>{{ monthlyFinacialStatement['grossIncomSum'] }} zł</h4>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-4">
                            <i class="fa fa-dollar fa-5x"></i>
                        </div>
                        <div class="col-xs-8 text">
                            <div class="row">
                                <div class="col-xs-6">
                                    <h4 class="huge" >Dzisiaj</h4>

                                </div>
                                <div class="col-xs-6">
                                    <h4>{{ todayFinacialStatement['netIncomSum'] }} zł</h4>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-xs-6">
                                    <h4 class="huge" >Miesiąc</h4>
                                </div>
                                <div class="col-xs-6">
                                    <h4>{{ monthlyFinacialStatement['netIncomSum'] }} zł</h4>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
